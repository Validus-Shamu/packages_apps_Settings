<?xml version="1.0" encoding="utf-8"?>

<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:settings="http://schemas.android.com/apk/res/com.android.settings"
    android:title="@string/wolvesden_settings_title" >

    <PreferenceScreen
       android:key="status_bar"
       android:fragment="com.android.settings.validus.statusbar.StatusbarHolder"
       android:title="@string/statusbar_bar_title" 
       android:summary="@string/statusbar_bar_summary" />

    <PreferenceScreen
       android:key="quicksettings"
       android:fragment="com.android.settings.validus.qssettings.QsSettingsHolder"
       android:title="@string/quicksettings_title" 
       android:summary="@string/quicksettings_summary" />

    <PreferenceScreen
       android:key="navigation"
       android:fragment="com.android.settings.validus.navigation.NavigationHolder"
       android:title="@string/navigation_title" 
       android:summary="@string/navigation_summary" />

    <PreferenceScreen
       android:key="buttons"
       android:fragment="com.android.settings.validus.buttons.ButtonsHolder"
       android:title="@string/buttons_title" 
       android:summary="@string/buttons_summary" />

    <PreferenceScreen
       android:key="recent"
       android:fragment="com.android.settings.validus.recent.RecentHolder"
       android:title="@string/recent_title" 
       android:summary="@string/recent_summary" />

    <PreferenceScreen
       android:key="lockscreen"
       android:fragment="com.android.settings.validus.lockscreen.LockscreenHolder"
       android:title="@string/lockscreen_title" 
       android:summary="@string/lockscreen_summary" />

    <!-- HW keys -->
    <PreferenceScreen
       android:key="hardwarekeys_settings"
       android:fragment="com.android.settings.slim.HardwareKeysSettings"
       android:title="@string/button_keys_title" 
       android:summary="@string/button_keys_summary" />

    <PreferenceScreen
       android:key="advanced"
       android:fragment="com.android.settings.validus.advanced.AdvancedHolder"
       android:title="@string/advanced_title" 
       android:summary="@string/advanced_summary" />

</PreferenceScreen>
